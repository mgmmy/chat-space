.chat-side
  .chat-side__header
    %p.chat-side__header__user-name
      = current_user.name
    %ul.chat-side__header__user-menu
      %li.chat-side__header__user-menu__new-group
        = link_to new_group_path do
          %i.fa.fa-edit
      %li.chat-side__header__user-menu__edit-user
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog
      %li.chat-side__header__user-menu__edit-user
        = link_to admin_users_index_path do
          %i.fa.fa-history

  .groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to group_messages_path(group) do
          %p.groups__group__name
            = group.name
          %p.groups__group__last-message
            = group.show_last_message
