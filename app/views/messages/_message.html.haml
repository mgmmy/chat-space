.messages__message{ "data-message_id": message.id }
  .messages__message__upper-info
    %p.messages__message__upper-info__user
      = message.user.name
    %p.messages__message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__message__lower-message
    - if message.message.present?
      %p.messages__message__lower-message__text
        = message.message
    = image_tag message.image.url, class: 'messages__message__lower-message__image' if message.image.present?
